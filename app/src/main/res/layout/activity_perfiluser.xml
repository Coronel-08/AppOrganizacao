<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="80px"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="80px"
        android:text="Seu Perfil"
        android:textAlignment="center"
        android:textSize="100px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/_f7e0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fotoperfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="80px"
            android:text="Carregar Foto"
            android:textAlignment="center"
            android:textSize="80px" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/camerapng_parspng_com_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/Nome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="60px"/>

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/Idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Idade"
        android:textSize="60px"/>

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btIniciarApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Aplicativo"
        android:textSize="26sp" />


</LinearLayout>